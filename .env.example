# Shared configuration
GLOBAL_LOG_LEVEL=debug
NODE_OPTIONS=--enable-source-maps

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USER=synopsis
DB_PASSWORD=secret
DB_NAME=synopsis

# Redis / BullMQ
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# MinIO storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_STATIC=synopsis-static
MINIO_BUCKET_MARKDOWN=synopsis-markdown

# Gateway API
GATEWAY_PORT=3000
GATEWAY_BASE_URL=http://gateway:3000
GATEWAY_QUEUE_NAMESPACE=core

# Worker: AI
WORKER_AI_PORT=3001
WORKER_AI_CONCURRENCY=2
WORKER_AI_QUEUE_NAMESPACE=ai

# Worker: Git
WORKER_GIT_PORT=3002
WORKER_GIT_REPOSITORIES_PATH=/data/git
WORKER_GIT_REMOTE_URL_TEMPLATE=https://github.com/synopsis/%s.git

# Frontend Renderer
FRONTEND_PORT=3003
FRONTEND_STATIC_BUCKET=${MINIO_BUCKET_STATIC}

# Static renderer options
STATIC_RENDER_CONCURRENCY=4
